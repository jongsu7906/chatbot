<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GanghwaMap">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="   강 화 캠 퍼 스"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="355dp"
        android:layout_height="225dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/map_gangwha"
        tools:srcCompat="@drawable/map_gangwha" />

    <Button
        android:id="@+id/button"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginRight="5dp"
        android:onClick="onClick"
        android:layout_gravity="right"
        android:text="본교 길찾기"/>

    <ImageView
        android:layout_width="360dp"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ganghwacome"
        tools:srcCompat="@drawable/ganghwacome" />


    <Button
        android:id="@+id/button3"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:onClick="onClickanyang"
        android:text="안 양 캠 퍼 스"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</LinearLayout>